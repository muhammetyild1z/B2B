@model List<ResultListFavoriDto>
@{
    ViewData["Title"] = "FavoriList";
    Layout = "~/Views/Layout/LayoutIndex.cshtml";
}

<div class="page-content">
	<div class="container">
		<table class="table table-wishlist table-mobile">
			<thead>
				<tr>
					<th>Ürün</th>
					<th>Fiyat</th>
					<th>Stok Miktarı</th>
					<th>Renk</th>
					<th>Ebat</th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="product-col">
							<div class="product">
								<figure class="product-media">
									<a href="#">
										<img src="@item.price.Product.ProductImage" alt="Product image">
									</a>
								</figure>

								<h3 class="product-title">
									<a href="#">@item.price.Product.ProductName</a>
								</h3><!-- End .product-title -->
							</div><!-- End .product -->
						</td>
						<td class="price-col">@item.price.price ₺</td>
						@if (item.price.stock.Quantity>1)
						{
							<td class="stock-col"><span class="in-stock">Stokta Var </span></td>
						}else
						{
							<td class="out-of-stock"><span class="in-stock">Stok Yok </span></td>
						}

						<td class="price-col"><span class="in-stock">@item.price.color.ColorCode</span></td>
						<td class="price-col"><span class="in-stock">@item.price.dimensions.En X @item.price.dimensions.Boy</span></td>
						<td class="price-col">
						@* 	<div class="dropdown">
								<button class="btn btn-block btn-outline-primary-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="icon-list-alt"></i>Select Options
								</button>

								<div class="dropdown-menu">
									<a class="dropdown-item" href="#">First option</a>
									<a class="dropdown-item" href="#">Another option</a>
									<a class="dropdown-item" href="#">The best option</a>
								</div>
							</div> *@
						</td>
						<td class="remove-col"><button class="btn-remove"><i class="icon-close"></i></button></td>
					</tr>
				}
			
			
			</tbody>
		</table><!-- End .table table-wishlist -->
		<div class="wishlist-share">
			<div class="social-icons social-icons-sm mb-2">
				<label class="social-label">Share on:</label>
				<a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
				<a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
				<a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
				<a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
				<a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
			</div><!-- End .soial-icons -->
		</div><!-- End .wishlist-share -->
	</div><!-- End .container -->
</div><!-- End .page-content -->

