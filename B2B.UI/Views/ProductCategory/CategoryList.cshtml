@model List<ResultProductCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Layout/LayoutIndex.cshtml";
}

<main class="main">
    <div class="page-header text-center mb-4" style="background-image: url('/molla/assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Ürünler<span>Listesi</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="toolbox">
                        <div class="toolbox-left">
                            <div class="toolbox-info">
                                <span>@Model.Count()</span> Ürün Çeşidi
                            </div><!-- End .toolbox-info -->
                        </div><!-- End .toolbox-left -->

                        <div class="toolbox-right">
                            <div class="toolbox-sort">
                                <label for="sortby">Sırala:</label>
                                <div class="select-custom">
                                    <select name="sortby" id="sortby" class="form-control">
                                        <option value="popularity" selected="selected">Popüler</option>
                                        <option value="rating">Fiyat yüksekten düşüğe</option>
                                        <option value="date">Fiyat düşükten yükseğe</option>
                                    </select>
                                </div>
                            </div><!-- End .toolbox-sort -->                        
                        </div><!-- End .toolbox-right -->
                    </div><!-- End .toolbox -->

                    <div class="products mb-3">
                        @foreach (var item in Model.DistinctBy(x => x.ProductID))
                        {
                            <div class="product product-list">
                                <div class="row">
                                    <div class="col-6 col-lg-3">
                                        <figure class="product-media">
                                            @*   <span class="product-label label-new">New</span> *@
                                            <a href="/product/productDetails?productid=@item.ProductID">
                                                <img src="@item.product.ProductImage" alt="Product image" class="product-image">
                                            </a>
                                        </figure><!-- End .product-media -->
                                    </div><!-- End .col-sm-6 col-lg-3 -->

                                    <div class="col-6 col-lg-3 order-lg-last">
                                        <div class="product-list-action">
                                            @await Component.InvokeAsync("_CategoryProductPrice", new { productId = item.ProductID })

                                            <div class="ratings-container">
                                                <div class="ratings">
                                                    <div class="ratings-val" style="width: 20%;"></div><!-- End .ratings-val -->
                                                </div><!-- End .ratings -->
                                                <span class="ratings-text">( 2 Reviews )</span>
                                            </div><!-- End .rating-container -->

                                            <div class="product-action">
                                                <a href="popup/quickView.html" class="btn-product btn-quickview" title="Quick view"><span>Incele</span></a>
                                                @*       <a href="#" class="btn-product btn-compare" title="Compare"><span>compare</span></a> *@
                                            </div><!-- End .product-action -->

                                            <a href="/product/productDetails?productid=@item.ProductID" class="btn-product btn-cart"><span>sepete ekle</span></a>
                                        </div><!-- End .product-list-action -->
                                    </div><!-- End .col-sm-6 col-lg-3 -->

                                    <div class="col-lg-6">
                                        <div class="product-body product-action-inner">
                                            @*   <a href="#" class="btn-product btn-wishlist" title="Add to wishlist" data-fav-id="@item.ProductID"><span>Favoriye Ekle</span></a> *@
                                            <div class="product-cat">
                                                <a href="#">??????</a>
                                            </div><!-- End .product-cat -->
                                            <h3 class="product-title"><a href="/product/productDetails?productid=@item.ProductID">@item.product.ProductName</a></h3><!-- End .product-title -->

                                            <div class="product-content">
                                                <p>@item.product.ProductDescription </p>
                                            </div><!-- End .product-content -->

                                            <div class="product-nav product-nav-thumbs">
                                                <a class="active">
                                                    <img src="@item.product.ProductImage1" alt="product desc">
                                                </a>
                                                <a>
                                                    <img src="@item.product.ProductImage2" alt="product desc">
                                                </a>

                                                <a>
                                                    <img src="@item.product.ProductImage3" alt="product desc">
                                                </a>
                                            </div><!-- End .product-nav -->
                                        </div><!-- End .product-body -->
                                    </div><!-- End .col-lg-6 -->
                                </div><!-- End .row -->
                            </div>

                            <!-- End .product -->
                        }


                    </div><!-- End .products -->

                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <a class="page-link page-link-prev" href="#" aria-label="Previous" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Önceki
                                </a>
                            </li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item-total">of 6</li>
                            <li class="page-item">
                                <a class="page-link page-link-next" href="#" aria-label="Next">
                                    Sonraki <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div><!-- End .col-lg-9 -->


                <aside class="col-lg-3 order-lg-first">
                    <div class="sidebar sidebar-shop">
                        <div class="widget widget-clean">
                            <label>Filtreler:</label>
                            <a href="#" class="sidebar-filter-clear">Tümünü temizle</a>
                        </div><!-- End .widget widget-clean -->
                        @await Component.InvokeAsync("_CategoryFilter")
                        @await Component.InvokeAsync("_DimensionsFilter")

                        <button class="btn btn-primary" id="submitFilter">
                            Ara
                        </button>

                        @*          @await Component.InvokeAsync("_ColorFilter") *@
@* 
                        <div class="widget widget-collapsible">
                            <h3 class="widget-title">
                                <a data-toggle="collapse" href="#widget-5" role="button" aria-expanded="true" aria-controls="widget-5">
                                    Fiyat
                                </a>
                            </h3><!-- End .widget-title -->

                            <div class="collapse show" id="widget-5">
                                <div class="widget-body">
                                    <div class="filter-price">
                                        <div class="filter-price-text">
                                            Fiyat Range:
                                            <span id="filter-price-range">0 ₺ - 750 ₺</span>
