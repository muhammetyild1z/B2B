 *@

                    </div><!-- End .sidebar sidebar-shop -->
                </aside><!-- End .col-lg-3 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->

<script>
    $(document).ready(function () {
        var dto = {
            CategoryId: [],
            SizesId: ''
        };

        // Function to update selected values
        function updateSelectedValues() {
            $('.size-checkbox:checked').each(function () {
                dto.SizesId = $(this).attr('id');
            });

            $('.category-checkbox:checked').each(function () {
                dto.CategoryId.push( $(this).attr('id'));
            });

            // AJAX call
            sendSelectedValues(dto); // Pass dto as argument
        }

        // Button click event
        $('#submitFilter').click(function () {
            // Call updateSelectedValues function when the button is clicked
            updateSelectedValues();
        });

        // AJAX function to send selected values
        function sendSelectedValues(dto) {
            console.log(dto);
            $.ajax({
                url: 'https://localhost:7268/api/AllProduct/FilterCategory',
                type: 'POST',
                data: JSON.stringify(dto),
                contentType: 'application/json',
                success: function (response) {
                    // Ürünlerin dönüşünü kontrol et
                    if (response && response.length > 0) {
                       
                        response.forEach(function (item) {
                            $('.your-target-element').append(`
                            <div class="product product-list">
                                <div class="row">
                                    <div class="col-6 col-lg-3">
                                        <figure class="product-media">
                                            <a href="/product/productDetails?productid=${item.ProductID}">
                                                <img src="${item.product.ProductImage}" alt="Product image" class="product-image">
                                            </a>
                                        </figure>
                                    </div>

                                    <div class="col-6 col-lg-3 order-lg-last">
                                        <div class="product-list-action">
                                            <!-- Burada _CategoryProductPrice bileşenini çağırabilirsiniz -->
                                            <div class="ratings-container">
                                                <div class="ratings">
                                                    <div class="ratings-val" style="width: 20%;"></div>
                                                </div>
                                                <span class="ratings-text">( 2 Reviews )</span>
                                            </div>

                                            <div class="product-action">
                                                <a href="popup/quickView.html" class="btn-product btn-quickview" title="Quick view"><span>Incele</span></a>
                                            </div>

                                            <a href="/product/productDetails?productid=${item.ProductID}" class="btn-product btn-cart"><span>sepete ekle</span></a>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="product-body product-action-inner">
                                            <div class="product-cat">
                                                <a href="#">??????</a>
                                            </div>
                                            <h3 class="product-title"><a href="/product/productDetails?productid=${item.ProductID}">${item.product.ProductName}</a></h3>

                                            <div class="product-content">
                                                <p>${item.product.ProductDescription}</p>
                                            </div>

                                            <div class="product-nav product-nav-thumbs">
                                                <a class="active">
                                                    <img src="${item.product.ProductImage1}" alt="product desc">
                                                </a>
                                                <a>
                                                    <img src="${item.product.ProductImage2}" alt="product desc">
                                                </a>

                                                <a>
                                                    <img src="${item.product.ProductImage3}" alt="product desc">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `);
                        });
                    } else {
                        console.log("No products found.");
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    // Hata durumunu burada işleyin
                }
            });
        }

    });
</script>