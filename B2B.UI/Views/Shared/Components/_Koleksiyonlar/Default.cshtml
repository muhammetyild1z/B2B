@model List<ResultProductDto>


<style>
    .basketAdd {
        display: none;
    }

    .item:hover .basketAdd {
        display: block;
    }

    .product__item__pic:hover {
        transition: transform 0.3s ease;
        transform: scale(1.2);
        overflow: hidden;
    }


</style>

<div class="row mt-5">
    <div class="col-lg-11 col-md-8 col-sm-8 mobile__slider__nav_newEpisode">
        <div class="section-title">
            <h4><i class="fa fa-upload"> </i>&nbsp;Urun Slider 2</h4>
        </div>

    </div>

    <div class="carousel-wrap">
        <div class="owl-carousel owl-2">
            @foreach (var item in Model)
            {
                <div class="item row">
                    <a href="#">

                        <div class="product__item__pic set-bg" data-setbg="@item.ProductImage">
                            <div class="ep">
                                <i class="icon-heart-o"></i>
                                <i class="icon-heart ep_hover"></i>
                            </div>
                            <button class="basketAdd btn btn-sm btn-danger " style="position:absolute; bottom:2px; min-width:100%">
                                Sepete Ekle
                                <i class="icon-shopping_basket"> </i>
                            </button>

                        </div>

                    </a>
                    <div class="product__item__text">
                        <ul>
                            @if (item.ProductName.Length > 22)
                            {
                                <h5>
                                    @Html.ActionLink(@item.ProductName.Substring(0, 22), "Izle", "AnimeIzle")
                                    @*   , new { AnimeID_Sezon = item.AnimeID, animeSezonsAndEpisodeID = item.AnimeSezonsAndEpisodeID, sezon = item.Sezon }) .. *@

                                </h5>
                            }
                            else
                            {
                                <h5>
                                    @Html.ActionLink(@item.ProductName, "Izle", "AnimeIzle")
                                    @*   ,new { AnimeID_Sezon = item.AnimeID, animeSezonsAndEpisodeID = item.AnimeSezonsAndEpisodeID, sezon = item.Sezon }) *@
                                </h5>
                            }
                            <h5 class="text-white font-weight-bold">@item.ProductPrice ₺</h5>
                        </ul>

                    </div>
                </div>
            }


        </div>
    </div>
</div>



<script>
    $('.owl-2').owlCarousel({
        loop: true,
        margin: 30,
        nav: true,

        autoplay: true,
        autoplayHoverPause: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 3
            },
            1000: {
                items: 6
            }
        }
    })
</script>
