                        @*    <div class="comment col-md-11 opacity-50"><i class="fa fa-tv"></i>&nbsp;@item.Sezon .Sezon @item.Episode .Bölüm</div> *@
                    </div>
                </a>
            }


        </div>
    </div>
</div>


<script>
    $('.owl-2').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,

        autoplay: true,
        autoplayHoverPause: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 3
            },
            1000: {
                items: 5
            }
        }
    })
</script>
