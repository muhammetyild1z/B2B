@model List<ResultProductDto>









<div class="row mt-5">
    <div class="col-lg-11 col-md-8 col-sm-8 mobile__slider__nav_newEpisode">
        <div class="section-title">
            <h4><i class="fa fa-upload"> </i>&nbsp;Urun Slider 2</h4>
        </div>

    </div>

    <div class="carousel-wrap">
        <div class="owl-carousel owl-2">
            @foreach (var item in Model)
            {
                <a href="#">

                    <div class="product__item__pic set-bg" data-setbg="@item.ProductImage">
                        @*   <div class="ep fa fa-calendar">&nbsp;@item.EpisodeCreateDate.ToString("dd MMMM", trCulture)</div> *@
                        @*<div class="comment col-md-6"><i class="fa fa-calendar"></i> @item.BolumCreateDate.ToString("dd-MMMM")</div>*@
